<fieldset>
  <legend>Question</legend>
  <%= f.label :title %>
  <%= f.text_area :title %>

  <fieldset>
    <legend>Answers</legend>
    <%= f.fields_for :answers do |answer| %>
      <%= render 'answer_fields', f: answer %>
    <% end %>
    <%= link_to_add_fields "Add Answer", f, :answers %>
  </fieldset>
</fieldset>
