<fieldset>
  <legend>Question</legend>
  <%= f.label :title %>
  <%= f.text_area :title %>

  <%= f.hidden_field :_destroy %>
  <%= link_to 'remove', '#', class: 'remove_fields' %>

  <%= f.fields_for :answers do |answer| %>
    <%= render 'answer_fields', f: answer %>
  <% end %>
  <%= link_to_add_fields "Add Answer", f, :answers %>
</fieldset>
